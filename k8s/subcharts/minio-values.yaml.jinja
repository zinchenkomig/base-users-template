
mode: standalone
statefulset:
  replicaCount: 1

ingress:
  enabled: true
  hostname: console.s3.{{domain}}

apiIngress:
  enabled: true
  hostname: s3.{{domain}}
  annotations:
    cert-manager.io/issuer: "letsencrypt-prod"
  tls:
    - secretName: zinchenkomig-minio-tls
      hosts:
        - s3.{{domain}}

provisioning:
  enabled: true
  buckets:
    - name: svc-buck
      withLock: true
